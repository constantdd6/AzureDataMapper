{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "employees": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "firstName": { "type": "string" },
                    "lastName": { "type": "string" },
                    "email": { "type": "string" },
                    "department": { "type": "string" }
                },
                "required": ["id", "firstName", "lastName", "email", "department"]
            }
        }
    },
    "required": ["employees"]
}
