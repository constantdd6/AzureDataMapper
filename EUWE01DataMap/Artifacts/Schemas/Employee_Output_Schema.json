{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "employees": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "employeeId": { "type": "integer" },
                    "fullName": { "type": "string" },
                    "contact": {
                        "type": "object",
                        "properties": {
                            "email": { "type": "string" }
                        },
                        "required": ["email"]
                    },
                    "department": { "type": "string" }
                },
                "required": ["employeeId", "fullName", "contact", "department"]
            }
        }
    },
    "required": ["employees"]
}
